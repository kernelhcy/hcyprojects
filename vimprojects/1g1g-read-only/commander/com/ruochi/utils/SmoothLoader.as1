package com.ruochi.utils{
	import flash.events.*;
	import flash.display.*;
	public class SmoothLoader extends Loader {
		private var info:Object;
		public function SmoothLoader() {
			super();
			this.contentLoaderInfo.addEventListener(Event.COMPLETE, loaderSmoothCompleteHandlerCenter);
		}
		private function loaderSmoothCompleteHandler(event:Event) {
			var image:Bitmap = Bitmap(event.currentTarget.loader.content);
			image.smoothing=true;
			
		}
	}
}